FROM python:3.7-alpine

MAINTAINER Marcos Pablo Russo <marcospr1974@gmail.com>

RUN apk update \
    && apk add git \
    && git clone https://github.com/m8r0wn/crosslinked.git \
    && cd crosslinked \
    && pip3 install -r requirements.txt \
    && mkdir /output

VOLUME /output

WORKDIR /crosslinked

ENTRYPOINT ["python3", "crosslinked.py"]
CMD ["-h"]
