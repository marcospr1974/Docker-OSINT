{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es7"],
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "removeComments": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "declaration": true,
        "noUnusedLocals": true,
        "outDir": "./build",
        "baseUrl": "src",
        "strict": true
    },
    "include": ["src/**/*.*"],
    "exclude": ["node_modules", "src/**/*.test.ts", "**/__mocks__/*", "**/__mockData__/"]
}
